                                    Height="30"
                                    Width="200"
                                    HorizontalAlignment="Left"
                                    QueryIcon="Find"
                                    FontSize="10"
                                    KeyUp="ContentDialogItemBarCode_KeyUp"
                                >
                            </AutoSuggestBox>
                        </Grid>


                        <Grid Grid.Column="1">
                            <AutoSuggestBox
                                    x:Name="ContentDialogItemName"
                                    Margin="0,0,0,0"
