                                <controls:DataGridTextColumn Binding="{Binding DatabaseStock,Mode=OneWay}"  Width="2.5*" Header="Stock Qty" FontSize="10" IsReadOnly="True"  />
                                <controls:DataGridTextColumn Binding="{Binding SalesRate ,Mode=OneWay }"   Width="3*" Header="Sales Rate" FontSize="10"  IsReadOnly="True"  />

                            </controls:DataGrid.Columns>
                        </controls:DataGrid>
                    </Grid>
                </Grid>
            </RelativePanel>
        </ContentDialog>
