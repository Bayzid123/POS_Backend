                                    Height="30"
                                    Width="200"
                                    HorizontalAlignment="Left"
                                    QueryIcon="Find"
                                    FontSize="10"
                                    KeyUp="ContentDialogItemName_KeyUp"
                                >
                            </AutoSuggestBox>
                        </Grid>

                    </Grid>
                    <Grid Grid.Row="1" x:Name="ContentBarCode"  Width="500" >
                        <controls:DataGrid     
                    AutoGenerateColumns="False"
                    GridLinesVisibility="Horizontal"
                            
                    CanUserResizeColumns="False"
                    CanUserSortColumns="False"
                    CanUserReorderColumns="False"
                            
                    BorderThickness="10"
              
